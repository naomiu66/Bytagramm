<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bytagramm.CommunitiesPage"
             xmlns:viewmodel="clr-namespace:Bytagramm.ViewModels"
             xmlns:communitymodel="clr-namespace:Bytagramm.Dto.Community"
             x:DataType="viewmodel:CommunitiesViewModel"
             BackgroundColor="#f9f9f9">

    <Grid Padding="20" RowSpacing="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header with title and button -->
        <HorizontalStackLayout Grid.Row="0" Spacing="10" VerticalOptions="Center">
            <Label Text="Communities"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="#1a1a1a"
                   HorizontalOptions="StartAndExpand" />

            <Button Text="Create"
                    Command="{Binding CreateCommunityCommand}"
                    BackgroundColor="#FF4500"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="40"
                    WidthRequest="110"
                    FontAttributes="Bold"/>
        </HorizontalStackLayout>

        <!-- Communities List -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Communities}"
                        SelectionMode="Single"
                        SelectionChangedCommand="{Binding OpenCommunityCommand}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="communitymodel:CommunityDto">
                    <Frame Padding="15"
                           Margin="0,10"
                           HasShadow="True"
                           CornerRadius="12"
                           BackgroundColor="White"
                           BorderColor="#ddd">

                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer
                                Command="{Binding Source={RelativeSource Mode=FindAncestor, AncestorType={x:Type ContentPage}}, Path=BindingContext.OpenCommunityCommand}"
                                CommandParameter="{Binding .}" />
                        </Frame.GestureRecognizers>

                        <VerticalStackLayout Spacing="5">
                            <Label Text="{Binding Title}"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="#222" />

                            <Label Text="{Binding Description}"
                                   FontSize="14"
                                   TextColor="#555"
                                   LineBreakMode="TailTruncation"
                                   MaxLines="2" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
